pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
-- Make PICO-8 and Lua more "OOP-ish" (part 2)

-- variables
--  player
local debug = true
local pills
local score


-- game loop
function _init()
	score = 0
	nPills = 25
	player = {
		x = 64,
		y = 64,
		dx = 1,
		dy = 1,
		spr = 1,
		width = 8,
		height = 8,
		isVertAlign = false,
		isHorizAlign = false,
		update = function(self)
		    if btn(0) then
		        self.x -=self.dx
		        self.spr = 4 + rnd(2)
		    end
		    if btn(1) then
		        self.x +=self.dx
		        self.spr = 4 + rnd(2)
		    end
		    if btn(2) then
		        self.y -=self.dy
		        self.spr = 6 + rnd(3)
		    end
		    if btn(3) then
		        self.y +=self.dy
		        self.spr = 1 + rnd(3)
		    end
		end,
		draw = function(self)
			spr(self.spr, self.x, self.y)
			if (debug) then
				rect(self.x - 1, self.y - 1, self.x + self.width, self.y + self.height, 8)
				-- print("pos x: "..self.x, self.x - 2, self.y - 14)
				-- print("pos y: "..self.y, self.x - 2, self.y - 8)
			end
		end,
		checkCollision = function(self, pill)
			local top = self.y
			local bottom = self.y + self.height
			if top < pill.y - 3 and pill.y - 3 < bottom then
				self.isHorizAlign = true
			else
				self.isHorizAlign = false
			end

			local left = self.x
			local right = self.x + self.width
			if left < pill.x - 3 and pill.x - 3 < right then
				self.isVertAlign = true
			else
				self.isVertAlign = false
			end

			if self.isHorizAlign and self.isVertAlign and not pill.isCollected then
				pill.isCollected = true
				score += 1
			end
		end
	}


	pills = {}
	for i = 1, nPills do
		pills[i] = makePills(flr(rnd(120) + 1), flr(rnd(120) + 1))
	end
end

function _update()
	player:update()

	local pill
	for pill in all(pills) do
		pill:update()
		player:checkCollision(pill)
	end
end


function _draw()
	cls()
	print("score: "..score, 5, 5, 7)
	player:draw()

	local pill
	for pill in all(pills) do
		pill:draw()
	end
end

function makePills(x, y)
	local pill = {
		x = x,
		y = y,
		isCollected = false,
		update = function(self)
		end,
		draw = function(self)
			if not self.isCollected then
				spr(48, self.x, self.y)

				if (debug) then
					rect(self.x, self.y, self.x + 8, self.y + 8, 10)
				end
			end
		end
	}

	return pill
end




